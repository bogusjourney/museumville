<script>
  $(function () {
    $('.itemlist > li > a[href]').click(function() {
      var itemUrl = $(this).attr('href');
      var exhibitSlug = prompt('Add to exhibit:', "/ted/exhibit/0");
      if (exhibitSlug) {
        $.post(exhibitSlug, {url: itemUrl}, function () {}, "json");
      }
      return false;
    });
  });
</script>

<h1><%= title %></h1>

<ul class="itemlist">
  <% for(var i=0; i<items.length; i++) {%>
    <li>
      <a href="<%= items[i].link %>">
        <span class="title"><%= items[i].title %></span>
        <img src='<%= items[i].enclosure['@'].url %>'/>
      </a>
    </li>
  <% } %>
</ul>
